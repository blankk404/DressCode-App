<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择单品（可多选）"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部"
                android:textColor="@color/white"
                android:backgroundTint="@color/primary_pink"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上衣"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnCoat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="外套"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnPants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="裤子"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnSkirt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="裙子"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnShoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="鞋子"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnAccessory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="配饰"
                style="@style/Widget.Material3.Button.OutlinedButton" />
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="320dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:text="完成选择"
        android:textColor="@color/white"
        app:backgroundTint="@color/primary_purple"
        app:cornerRadius="24dp" />

</LinearLayout>


