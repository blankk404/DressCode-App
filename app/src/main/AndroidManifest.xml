<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <!-- 权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:appCategory="audio"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DressCode"
        tools:targetApi="31" >
        <meta-data
            android:name="com.google.android.gms.car.application"
            android:resource="@xml/automotive_app_desc" />

        <!--
         Main music service, provides media browsing and media playback services to
         consumers through MediaBrowserService and MediaSession. Consumers connect to it through
         MediaBrowser (for browsing) and MediaController (for playback control)
        -->
        <service
            android:name=".MyMusicService"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.media.browse.MediaBrowserService" />
            </intent-filter>
        </service>

        <!-- 启动页 -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.DressCode.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 登录页 -->
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.DressCode.NoActionBar" />

        <!-- 注册页 -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.DressCode.NoActionBar" />

        <!-- 主页 -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.DressCode" />

        <!-- 个人中心 -->
        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.DressCode" />

        <!-- 编辑资料 -->
        <activity
            android:name=".EditProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.DressCode.NoActionBar" />

        <!-- 身材档案 -->
        <activity
            android:name=".BodyProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.DressCode.NoActionBar" />

        <!-- 添加衣物 -->
        <activity
            android:name=".AddClothingActivity"
            android:exported="false"
            android:theme="@style/Theme.DressCode.NoActionBar" />

        <!-- 衣物详情 -->
        <activity
            android:name=".ClothingDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.DressCode.NoActionBar" />

        <!-- 添加搭配 -->
        <activity
            android:name=".AddOutfitActivity"
            android:exported="false"
            android:theme="@style/Theme.DressCode.NoActionBar" />

        <!-- 查看/编辑拼图 -->
        <activity
            android:name=".OutfitDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.DressCode.NoActionBar" />

        <!-- AI 推荐 -->
        <activity
            android:name=".AiRecommendActivity"
            android:exported="false"
            android:theme="@style/Theme.DressCode.NoActionBar" />
    </application>

</manifest>